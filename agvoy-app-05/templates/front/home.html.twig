{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <h1>Liste des circuits</h1>

    <table class='table'>
    	<thead>
            <tr>
                <th>Date de départ</th>
                <th>Description</th>
                <th>Pays Départ</th>
                <th>Ville Départ</th>
                <th>Ville Arrivée</th>
                <th>Nombre de jours</th>
            </tr>
        </thead>
        <tbody>
        {% for programmationcircuit in programmationcircuits %}
            <tr>
                <td>{{ programmationcircuit.toStringDateDepart() }}</td>
                <td>{{ programmationcircuit.circuit.description }}</td>
                <td>{{ programmationcircuit.circuit.paysDepart }}</td>
                <td>{{ programmationcircuit.circuit.villeDepart }}</td>
                <td>{{ programmationcircuit.circuit.villeArrivee }}</td>
                <td>{{ programmationcircuit.circuit.dureeCircuit }}</td>
                <td>
                	 <a href="{{ path('circuit_show', {'id': programmationcircuit.circuit.id}) }}">détails</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no circuits found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
</div>
{% endblock %}
